  importlib("C:\Program Files (x86)\ArcGIS\Desktop10.8\com\esriCarto.olb");
  
  // Interfaces
  // ISimpleXForm Interface
  [
    object,
    oleautomation,
    pointer_default(unique),
    uuid(7E536337-CB2A-47ed-BA32-071C74728361),
    helpstring("Provides access to members that control a custom SimpleXform")
  ]
  interface ISimpleXform : IUnknown
  {
    [
      propget, 
      helpstring("The name")
    ] 
    HRESULT Name([out, retval] BSTR* pName);

    [
      propput, 
      helpstring("The name")
    ] 
    HRESULT Name([in] BSTR name);
  };

  //IRMCXForm Interface
